upstream acupuntura_server {
  server unix:/var/www/python/medicina/acupuntura/run/gunicorn.sock fail_timeout=0;
}

server {
    listen 80;
    listen [::]:80;
    listen 443 ssl;
    server_name acupuntura.ghoulrul.online;

    #SSL/TLS
    ssl_certificate /etc/letsencrypt/live/ghoulrul.online/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/ghoulrul.online/privkey.pem; # managed by Certbot

    client_max_body_size 4G;

    access_log /var/www/python/medicina/acupuntura/logs/nginx-access.log;
    error_log /var/www/python/medicina/acupuntura/logs/nginx-error.log;

    location /static {
        alias   /var/www/python/medicina/acupuntura/acupuntura/acupuntura/static/;
    }

    location /media {
        alias   /var/www/python/medicina/acupuntura/acupuntura/acupuntura/media/;
    }

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        if (!-f $request_filename) {
            proxy_pass http://acupuntura_server;
            break;
        }
    }
}
